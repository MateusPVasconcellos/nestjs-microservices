{
	"$schema": "https://www.krakend.io/schema/v2.4/krakend.json",
	"version": 3,
	"port": 8080,
	"timeout": "3000ms",
	"cache_ttl": "300s",
	"endpoints": [
		{
			"@comment": "User Signup",
			"endpoint": "/signup",
			"method": "POST",
			"backend": [
				{
					"host": ["http://192.168.1.7:8010"],
					"url_pattern": "/signup",
					"encoding": "string"
				}
			]
		},
		{
			"@comment": "User Signin",
			"endpoint": "/signin",
			"method": "POST",
			"backend": [
				{
					"host": ["http://192.168.1.7:8010"],
					"method": "POST",
					"url_pattern": "/signin",
					"encoding": "json"
				}
			]
		}
	],
	"extra_config": {
		"security/cors": {
			"allow_origins": ["*"],
			"allow_methods": ["POST", "GET", "PUT", "DELETE"],
			"allow_headers": ["Origin", "Authorization", "Content-Type"],
			"expose_headers": ["Content-Length"],
			"max_age": "12h"
		}
	},
	"output_encoding": "json",
	"name": "api-gateway"
}
