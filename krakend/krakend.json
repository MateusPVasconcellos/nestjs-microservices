{
	"$schema": "https://www.krakend.io/schema/v2.4/krakend.json",
	"version": 3,
	"port": 8080,
	"timeout": "30000ms",
	"cache_ttl": "300s",
	"output_encoding": "json",
	"name": "api-gateway",
	"endpoints": [
		{
			"@comment": "User Signup",
			"endpoint": "/signup",
			"method": "POST",
			"backend": [
				{
					"host": ["http://192.168.1.2:8010"],
					"url_pattern": "/signup",
					"encoding": "string"
				}
			]
		},
		{
			"@comment": "User Signin",
			"endpoint": "/signin",
			"method": "POST",
			"backend": [
				{
					"host": ["http://192.168.1.2:8010"],
					"method": "POST",
					"url_pattern": "/signin",
					"encoding": "safejson"
				}
			]
		},
		{
			"@comment": "User Find All",
			"endpoint": "/users",
			"method": "GET",
			"extra_config": {
				"auth/validator": {
					"alg": "HS256",
					"jwk_local_path": "./jwk.txt",
					"operation_debug": true,
					"disable_jwk_security": true
				}
			},
			"backend": [
				{
					"host": ["http://192.168.1.2:8010"],
					"method": "GET",
					"url_pattern": "/users",
					"encoding": "safejson",
					"is_collection": true,
					"extra_config": {
						"proxy": {
							"flatmap_filter": [
								{ "type": "del", "args": ["collection.*.password"] },
								{
									"type": "move",
									"args": ["collection", "users"]
								}
							]
						}
					}
				}
			]
		},
		{
			"@comment": "Refresh",
			"endpoint": "/refresh",
			"input_headers": ["x-email", "x-user", "x-jti"],
			"method": "GET",
			"extra_config": {
				"auth/validator": {
					"alg": "HS256",
					"jwk_local_path": "./jwk.txt",
					"operation_debug": true,
					"disable_jwk_security": true,
					"propagate_claims": [
						["sub", "x-user"],
						["jti", "x-jti"],
						["email", "x-email"]
					]
				}
			},
			"backend": [
				{
					"host": ["http://192.168.1.2:8000"],
					"method": "GET",
					"url_pattern": "/refresh",
					"encoding": "safejson"
				}
			]
		},
		{
			"@comment": "Activate User",
			"endpoint": "/activate",
			"input_headers": ["x-email"],
			"method": "GET",
			"extra_config": {
				"auth/validator": {
					"alg": "HS256",
					"jwk_local_path": "./jwk.txt",
					"operation_debug": true,
					"disable_jwk_security": true,
					"propagate_claims": [["email", "x-email"]]
				}
			},
			"backend": [
				{
					"host": ["http://192.168.1.2:8010"],
					"method": "GET",
					"url_pattern": "/activate",
					"encoding": "safejson"
				}
			]
		},
		{
			"@comment": "Resend Activate User Email",
			"endpoint": "/resend-activate",
			"method": "GET",
			"input_query_strings": ["email"],
			"backend": [
				{
					"host": ["http://192.168.1.2:8010"],
					"method": "GET",
					"url_pattern": "/resend-activate",
					"encoding": "string"
				}
			]
		},
		{
			"@comment": "Send Recovery Password Email",
			"endpoint": "/recovery-email",
			"method": "GET",
			"input_query_strings": ["email"],
			"backend": [
				{
					"host": ["http://192.168.1.2:8010"],
					"method": "GET",
					"url_pattern": "/recovery-email",
					"encoding": "string"
				}
			]
		}
	],
	"extra_config": {
		"security/cors": {
			"allow_origins": ["*"],
			"allow_methods": ["POST", "GET", "PUT", "DELETE"],
			"allow_headers": ["Origin", "Authorization", "Content-Type"],
			"expose_headers": ["Content-Length"],
			"max_age": "12h"
		}
	}
}
